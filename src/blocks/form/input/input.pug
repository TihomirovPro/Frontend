mixin input(data)
  if data.required && data.textarea
    +e.TEXTAREA.input.textarea(type=data.type name=data.name placeholder=data.placeholder required)
  else if data.textarea
    +e.TEXTAREA.input.textarea(type=data.type name=data.name placeholder=data.placeholder)
  else if data.required
    +e.INPUT.input(type=data.type name=data.name placeholder=data.placeholder required)
  else
    +e.INPUT.input(type=data.type name=data.name placeholder=data.placeholder)

mixin inputLabel(data)
  +e.LABEL.label
    p!= data.label
    +input({type: data.type, name: data.name, placeholder: data.placeholder, required: data.required, textarea: data.textarea})